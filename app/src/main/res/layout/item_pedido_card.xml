<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtNumeroMesaCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mesa 06" />

        <TextView
            android:id="@+id/txtNumeroPedidoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="6"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNumeroMesaCard"
            app:layout_constraintTop_toBottomOf="@id/txtNumeroMesaCard"
            tools:text="Pedido nÂº 20" />

        <Button
            android:id="@+id/btnPagarPedidoCard"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimary"
            android:text="Pagar"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnVerPedidoCard"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:text="Detalhar"
            app:layout_constraintBottom_toBottomOf="@+id/btnPagarPedidoCard"
            app:layout_constraintEnd_toStartOf="@+id/btnPagarPedidoCard"
            app:layout_constraintTop_toTopOf="@+id/btnPagarPedidoCard" />

        <TextView
            android:id="@+id/txtPrecoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="0dp"
            android:textColor="@color/VerdeOutro"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.851"
            app:layout_constraintStart_toEndOf="@+id/txtNumeroMesaCard"
            app:layout_constraintTop_toBottomOf="@+id/btnPagarPedidoCard"
            tools:ignore="MissingConstraints"
            tools:text="R$ 1999,99" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>